#version 450 core

//layout(set=0, binding=0) uniform sampler2D iTexture;
layout(set=0, binding=0) uniform texture2D iTexture;
layout(set=0, binding=1) uniform sampler iSampler;

layout(location=0) in vec2 iTexcoord0;

layout(location=0) out vec4 oColor;

void main()
{
    vec4 v = texture(sampler2D(iTexture, iSampler), iTexcoord0);
    oColor = v;
}